rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /hero/main {
      allow read: if true;
      allow write: if request.auth != null && 
                   request.auth.token.adminHash == "240be518fabd2724ddb6f04eeb1da5967448d7e831c08c8fa822809f74c720a9";
    }
    match /about/main {
      allow read: if true;
      allow write: if request.auth != null && 
                   request.auth.token.adminHash == "240be518fabd2724ddb6f04eeb1da5967448d7e831c08c8fa822809f74c720a9";
    }
    match /portfolio/portfolioData {
      allow read: if true;
      allow write: if request.auth != null && 
                   request.auth.token.adminHash == "240be518fabd2724ddb6f04eeb1da5967448d7e831c08c8fa822809f74c720a9";
    }
    // Add similar rules for other collections...
  }
}